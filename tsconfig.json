{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM", "ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts",
    "./*.config.ts"
  ]
}
